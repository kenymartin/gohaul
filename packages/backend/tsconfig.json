{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@prisma/client": ["../../node_modules/@prisma/client"],
      "@gohaul/shared": ["../shared"],
      "@gohaul/frontend": ["../frontend"],
      "@gohaul/backend": ["."]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
} 